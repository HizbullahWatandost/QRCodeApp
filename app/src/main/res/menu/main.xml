                    android:orderInCategory="1"
                    android:title="@string/english" />
                <item
                    android:id="@+id/dari_lang_select"
                    android:icon="@drawable/afghanistan_flag_icon"
                    android:orderInCategory="2"
                    android:title="@string/dari" />
                <item
                    android:id="@+id/pashto_lang_select"
                    android:icon="@drawable/afghanistan_flag_icon"
                    android:orderInCategory="3"
                    android:title="@string/pashto" />
            </group>
        </menu>
    </item>

    <item
        android:id="@+id/actionbar_settings"
        android:icon="@drawable/ic_settings_green_24dp"
